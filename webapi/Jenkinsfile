pipeline {
    agent any
    stages {
        stage('hello') {
            steps {
                sh 'echo Hello Jenkins!'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    scannerHome = tool 'Sonarqube';
                }
                withSonarQubeEnv() {
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }

        stage('Build Docker') {
            steps {
                dir(path: 'webapi/'){
                    sh 'docker build -t node-api .'
                    echo 'Docker Build Finalizado'
                }
            }
        }
    }
}

