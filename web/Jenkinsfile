pipeline {
    environment {
        imagename = "paivae/mundose-web"
        dockerImage = ''
        containerName = 'mundose-webapp-test'
        dockerHubCredentials = 'DockerHubs'
    }
    agent any
    stages {

        stage('Deploy Image') {
            steps {
                sshagent(credentials: ['webapp-prod-serv']) {
                    sh '''
                        docker run hello-world
                    '''
                }
            }
        }
    }   

    post {
    always {
      sh 'docker logout'
      echo 'Session cerrada de docker'
    }
  }
}

