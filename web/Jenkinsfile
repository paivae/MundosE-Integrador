pipeline {
    agent any
    stages {
        stage('hello') {
            steps {
                sh 'echo Hello Jenkins!'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('Sonarqube') {
                    script {
                        scannerHome = tool 'Sonarqube';
                    }
                    sh "${scannerHome}/bin/sonar-scanner"
                }
            }
        }

        stage('Build Docker') {
            steps {
                dir(path: 'web/'){
                    sh 'docker build -t node-api .'
                    echo 'Docker Build Finalizado'
                }
            }
        }
    }
}

